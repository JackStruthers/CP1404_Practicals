# TODO: Create your Kivy layout in the kv language here
BoxLayout:
    BoxLayout:
        orientation: 'vertical'
        size_hint_x: 0.2
        BoxLayout:
            Label:
                text: 'Sort by:'
        BoxLayout:
            Spinner:
                id: order_selection
                text: app.current_sort
                values: app.sort_options
                on_text: app.sort_by(self.text)
        BoxLayout:
            Label:
                text: 'Add new movie...'
        BoxLayout:
            Label:
                text: 'Title'
        BoxLayout:
            TextInput:
                id: title_box
                multiline: False
                write_tab: False
        BoxLayout:
            Label:
                text: 'Category'
        BoxLayout:
            TextInput:
                id: category_box
                multiline: False
                write_tab: False
        BoxLayout:
            Label:
                text: 'Year'
        BoxLayout:
            TextInput:
                id: year_box
                multiline: False
                write_tab: False
        BoxLayout:
            Button:
                id: add_movie
                text: 'Add movie'
        BoxLayout:
            Button:
                id: clear_inputs
                text: 'Clear'


    BoxLayout:
        orientation: 'vertical'
        Label:
            id: watched_unwatched
            size_hint_y: 0.1
        BoxLayout:
            orientation: 'vertical'
            id: entries_box
        Label:
            size_hint_y: 0.1
            text: app.status_text


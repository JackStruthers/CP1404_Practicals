BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            text: '0.0'
            on_text: app.handle_conversion()
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                id: plus_one
                text: 'Up'
                on_press: app.handle_button_change(1)
            Button:
                id: minus_one
                text: 'Down'
                on_press: app.handle_button_change(-1)
